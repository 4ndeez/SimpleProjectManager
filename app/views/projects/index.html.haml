.container
  %p#notice= notice
  %h1 Projects
  %table
    %thead
      %tr
        %th Name
        %th Summary
        %th Start date
        %th End date
        %th{:colspan => "3"}
    %tbody
      - @projects.each do |project|
        %tr
          %td= project.name
          %td= project.summary
          %td= project.start_date
          %td= project.end_date
          %td= link_to 'Show', project
          %td= link_to 'Edit', edit_project_path(project)
          %td= link_to 'Remove', project, method: :delete, data: { confirm: 'Are you sure?' }
  %br/
  %h4= link_to 'Create new project', new_project_path
